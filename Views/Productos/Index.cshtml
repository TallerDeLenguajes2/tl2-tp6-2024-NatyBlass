@model IEnumerable<tl2_tp6_2024_NatyBlass.Models.Productos.Producto>

@{
    ViewData["Title"] = "Listar Productos";
}

<h1>Listar Productos</h1>

<p>
    <a asp-action="Crear">Crear Nuevo Producto</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Descripci√≥n</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var producto in Model)
        {
            <tr>
                <td>@producto.Descripcion</td>
                <td>@producto.Precio</td>
                <td>
                    <a asp-action="Modificar" asp-route-id="@producto.IdProducto">Modificar</a>
                    <a asp-action="Eliminar" asp-route-id="@producto.IdProducto">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>